<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.Addrecipie">
    <!-- Toolbar with Back Button -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F5EC"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Profile Image" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tekshila"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/edit_profile_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Edit Profile"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#007BFF"
                    />


                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@null"
                    android:contentDescription="Back"
                    android:padding="8dp"
                    android:src="@drawable/arrowleft"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>

            <!-- Form Fields -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Add New Recipe"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/recipe_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Name of the recipe"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/hintColor" />

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Description"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/hintColor" />

            <!-- Cuisine and Category -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/cuisineDropdown"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#007BFF"
                    android:entries="@array/cuisine_options_array"
                    android:spinnerMode="dropdown" />

                <Spinner
                    android:id="@+id/foodTypeDropdown"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#007BFF"
                    android:entries="@array/food_type_options_array"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <!-- Ingredients and Quantity Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/ingredientsDropdown"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#007BFF"
                    android:entries="@array/ingredient_options_array"
                    android:hint="Ingredients"
                    android:spinnerMode="dropdown" />

                <Spinner
                    android:id="@+id/quantityDropdown"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#007BFF"
                    android:entries="@array/ingredient_quantity_array"
                    android:hint="Quantity"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <!-- Dynamic Ingredients Container -->
            <LinearLayout
                android:id="@+id/dynamic_ingredients_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical" />

            <Button
                android:id="@+id/add_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Add Ingredient"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/green"
                />

            <EditText
                android:id="@+id/steps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Steps"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/hintColor" />

            <LinearLayout
                android:id="@+id/dynamic_steps_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical" />

            <Button
                android:id="@+id/add_steps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Add Steps"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/green"
                />

            <!-- Replace EditText with Buttons for TimePickerDialog -->
            <Button
                android:id="@+id/button_preparation_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Select Preparation Time"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textColorHint="@color/hintColor"
                android:backgroundTint="@color/green"
                />

            <Button
                android:id="@+id/button_cooking_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Select Cooking Time"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textColorHint="@color/hintColor"
                android:backgroundTint="@color/green"
                />

            <!-- Upload Photos Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Upload Photos"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/image_preview"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:contentDescription="Upload Photos"
                android:src="@drawable/uploadimage" />

            <Button
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Upload Image"
                android:backgroundTint="@color/green"
                />
            <!-- Upload Video Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Upload Video"
                android:textColor="#000000" />
            <!-- ImageView for Video Placeholder -->
            <ImageView
                android:id="@+id/video_placeholder"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:contentDescription="Upload Video"
                android:src="@drawable/uploadimage" />
            <!-- Video Preview Section -->
            <VideoView
                android:id="@+id/video_preview"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:contentDescription="Upload Video"
                android:visibility="gone"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/videoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Upload Video"
                android:backgroundTint="@color/green" />
            <!-- Submit Button -->
            <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:text="Submit"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/green"
                />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
