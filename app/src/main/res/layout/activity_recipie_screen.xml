<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.RecipieScreen">

    <!-- ScrollView to allow scrolling -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Wrap content inside LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Icon -->
            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Profile icon"
                android:layout_gravity="end" />

            <!-- Title and Header -->
            <TextView
                android:id="@+id/recipe_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Recipes"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reviews_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reviews for today"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <!-- Recipe Image -->
            <ImageView
                android:id="@+id/recipe_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="Recipe image" />
            <!-- Like, Save, Share Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Like Button with Text -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/like_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="Like"
                        android:src="@drawable/love" />

                    <TextView
                        android:id="@+id/like_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Like"
                        android:textSize="14sp"
                        android:gravity="center"/>
                </LinearLayout>

                <!-- Save Button with Text -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="16dp">

                    <ImageView
                        android:id="@+id/save_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="Save"
                        android:src="@drawable/save" />

                    <TextView
                        android:id="@+id/save_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:textSize="14sp"
                        android:gravity="center"/>
                </LinearLayout>

                <!-- Share Button with Text -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="16dp">

                    <ImageView
                        android:id="@+id/share_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="Share"
                        android:src="@drawable/share" />

                    <TextView
                        android:id="@+id/share_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share"
                        android:textSize="14sp"
                        android:gravity="center"/>
                </LinearLayout>

            </LinearLayout>
            <!-- Recipe Image -->
            <VideoView
                android:id="@+id/recipe_video"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="Recipe video" />

            <!-- Preparation Section -->
            <TextView
                android:id="@+id/preparation_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preparation"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <!-- Total, Prep, and Cook Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Time\n1 hr 3 min"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/prep_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prep Time\n20 min"
                    android:textAlignment="center"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:id="@+id/cook_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cook Time\n40 min"
                    android:textAlignment="center"
                    android:layout_marginStart="16dp" />
            </LinearLayout>



            <!-- Tabs for Ingredients and Steps -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:tabMode="fixed"
                app:tabGravity="fill"
                >


                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tab_ingredients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tab_steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step by Step" />
            </com.google.android.material.tabs.TabLayout>

            <LinearLayout
                android:id="@+id/ingredients_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/steps_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" /> <!-- Initially hidden -->

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
