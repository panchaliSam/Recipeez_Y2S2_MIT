<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5"
    tools:context=".view.fragments.Home">

    <!-- Editor's Choice and For You section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <!-- Button for Editor's Choice -->
        <Button
            android:id="@+id/editors_choice_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editor's Choice"
            android:textSize="18sp"
            android:textColor="#FFFF"
            android:paddingEnd="32dp"
            android:gravity="center"
            android:backgroundTint="@color/green"
            />

        <!-- Button for For You -->
        <Button
            android:id="@+id/for_you_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For You"
            android:textSize="18sp"
            android:textColor="#000"
            android:backgroundTint="@color/white"
            android:gravity="center" />
    </LinearLayout>

    <!-- "Your Recipes" section -->
    <TextView
        android:id="@+id/your_recipes_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Recipes"
        android:textSize="24sp"
        android:textColor="#000"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Reviews for today image (Firebase) -->
    <ImageView
        android:id="@+id/today_recipe_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"
        android:background="#ccc" />

    <TextView
        android:id="@+id/banner_recipe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Recipe Title"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_below="@id/today_recipe_image"/>
    <!-- Latest Recipes label -->
    <TextView
        android:id="@+id/latest_recipes_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latest Recipes"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginBottom="8dp" />

    <!-- Horizontal ScrollView for Latest Recipes -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/latest_recipes_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Images will be loaded dynamically -->
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
